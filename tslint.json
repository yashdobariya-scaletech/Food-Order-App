{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-any": false,
        "prefer-for-of": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-line-length": [
            true,
            {
                "limit": 160,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-angle-bracket-type-assertion": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single"
        ],
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}
